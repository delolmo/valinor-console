{
    "name": "delolmo/valinor-console",
    "description": "Use symfony/console as a Valinor source",
    "type": "library",
    "authors": [
        {
            "name": "Antonio del Olmo",
            "email": "antonio@delolmo.pro"
        }
    ],
    "require": {
        "php": "~8.0.0 || ~8.1.0 || ~8.2.0 || ~8.3.0",
        "cuyz/valinor": "^1.2",
        "symfony/console": "^6.2 || ^7.0"
    },
    "require-dev": {
        "ext-xdebug": "*",
        "doctrine/coding-standard": "^13.0",
        "ergebnis/composer-normalize": "^2.47",
        "infection/infection": "^0.27",
        "php-parallel-lint/php-parallel-lint": "^1.4",
        "phpstan/phpstan": "^1.9",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpstan/phpstan-mockery": "^1.1",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpstan/phpstan-strict-rules": "^1.4",
        "phpunit/phpunit": "^10.4",
        "rector/rector": "^1.2",
        "squizlabs/php_codesniffer": "^3.7",
        "vimeo/psalm": "^5.16"
    },
    "autoload": {
        "psr-4": {
            "DelOlmo\\Valinor\\Mapper\\Source\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DelOlmoPro\\Valinor\\Mapper\\Source\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ergebnis/composer-normalize": true,
            "infection/extension-installer": true
        },
        "sort-packages": true
    },
    "scripts": {
        "coverage": "php -d xdebug.mode=coverage vendor/bin/phpunit --coverage-text",
        "infection": "infection --threads=4 --only-covered",
        "lint": "parallel-lint ./src",
        "phpcbf": "phpcbf",
        "phpcs": "phpcs -s --colors",
        "phpstan": [
            "@putenv XDEBUG_MODE=off",
            "phpstan analyse --xdebug --memory-limit 1G"
        ],
        "phpunit": "phpunit --configuration phpunit.xml.dist",
        "psalm": "psalm --config psalm.xml",
        "rector": "rector process --dry-run",
        "test": [
            "@lint",
            "@phpcs",
            "@rector",
            "@phpstan",
            "@psalm",
            "@phpunit"
        ]
    }
}
